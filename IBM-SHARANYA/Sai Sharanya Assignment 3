# Assignment 3- Blinking of LED and traffic lights

buzzer = Buzzer(12)    
button = Button(20)    
lights = TrafficLights(20, 5, 7)    
    
while True:    
           button.wait_for_press()   
           buzzer.on()   
           light.green.on()    
           sleep(1)    
           lights.amber.on()    
           sleep(1)    
           lights.red.on()    
           sleep(1)    
           lights.off()   
           buzzer.off()
